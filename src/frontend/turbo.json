{
  "$schema": "https://turbo.build/schema.json",
  "cacheDir": ".turbo/cache",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.test.{js,ts,jsx,tsx}",
        "vitest.config.ts",
        "tsconfig.json"
      ],
      "outputs": [],
      "cache": true
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["storybook-static/**"],
      "cache": true,
      "persistent": false
    },
    "storybook": {
      "dependsOn": ["^storybook"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["storybook-static/**"],
      "cache": true,
      "persistent": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{js,ts,jsx,tsx}"],
      "cache": true,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
